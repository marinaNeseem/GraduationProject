const mongoose = require('mongoose');

// Define Category Schema
const CategorySchema = new mongoose.Schema({
    name: {
        type: String,
        required: true,
        unique: true,
        
    },
    slug: {
        type: String,
        lowercase: true,
        required: true
    },
    image: String
}, { timestamps: true });

const Category = mongoose.model('Category', CategorySchema);